@model ICollection<Softtek.Academy2018.Demo.Domain.Model.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<br />
@Html.ActionLink("Add a new User", "New", "User")
<hr />
<br />


@if (Model.Count() == 0)
{
    <h2> You don't have any users!</h2>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.ActionLink(user.IS, "Details", "User", new { id = user.Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}
