@model IEnumerable<Softtek.Academy2018.ToDoListApp.Web.Models.QuestionDTO>
@using Softtek.Academy2018.ToDoListApp.Web.Models
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Question List</h2>
<br />
<hr />
<br />

@if (Model.Count() <= 0)
{
    <h1>You don't have any questions yet! (Run the Seed Method)</h1>
}
else
{
    <table class="table table-striped" , style="table-layout:fixed">
        <thead style="display:table-header-group">
            <tr>
                <th id="th1">Name</th>
                <th id="th2">Question Type</th>
                <th id="th3">Add To Survey</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var question in Model)
                {

                <tr>
                    <td headers="th1">@question.Text</td>
                    <td headers="th2">@question.QuestionTypeId</td>
                    <td headers="th3">@Html.Partial("_PartialQuestionButton", new PartialButton { Id = question.Id })</td>
                </tr>
            }
        </tbody>
    </table>
}

